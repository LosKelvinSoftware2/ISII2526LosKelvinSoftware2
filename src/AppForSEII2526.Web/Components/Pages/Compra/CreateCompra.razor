@page "/Compra/CreateCompra"
@inject NavigationManager navigation
@using AppForSEII2526.Web.Components.Shared
@using AppForSEII2526.Web.API
@inject AppForSEII2526APIClient apiclient
@inject ILogger<CreateCompra> logger
@inject CompraStateContainer compraState

<h3>CreateCompra</h3>

@* compra is the object that will be edited thanks to the form *@
<EditForm Model="compra" OnValidSubmit="OpenDialog">
    <div class="row">
        <DataAnnotationsValidator />
        <ValidationSummary/>
    </div>
    <div class="row alert alert-danger" role="alert" hidden="@hideErrors">
        <p id="ErrorsShown">Errors: @messageError</p>
    </div>
    <div class="row g-3">
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="compra.NameCustomer" class="form-control" id="Name" />
                <label for="Name">Name </label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="compra.SurnameCustomer" class="form-control" id="Surname" />
                <label for="Name">Name </label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="compra.DeliveryAddress" class="form-control" id="DeliveryAddress" />
                <label for="DeliveryAddress">Delivery Address</label>
            </div>
        </div>
    </div>
    <div class="row g-2">
        <div class="col-md">
            <div class="form-floating">
                @*a dropdown for selecting the payment method*@
                <InputSelect class="form-select" @bind-Value="@compra.MetodoPago" id="MetodoPago">
                    <option value="@TiposMetodoPago.TarjetaCredito" default> CreditCard</option>
                    <option value="@TiposMetodoPago.PayPal"> PayPal</option>
                    <option value="@TiposMetodoPago.Efectivo"> Cash</option>
                </InputSelect>
                <label for="PaymentMethod">Payment Method</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                @*this button will be used to ask the user if he want to proceed to purchase the tools*@
                <button class="btn btn-primary" type="submit" id="Submit">
                    Compra tu herramienta
                </button>
            </div>
        </div>
    </div>
    <h4>Compra detail</h4>
    <p><b>Date from:</b> @compra.RentalDateFrom.ToString("dd/MM/yyyy") <b>to:</b> @compra.RentalDateTo.ToString("dd/MM/yyyy")</p>
    <p>
        <b>Total price:</b> @PrecioTotal €
        <button class="btn btn-outline-primary" type="submit" @onclick="ModifyRentalItems" id="ModifyMovies">
            Modify movies
        </button>
    </p>
    <div class="mh-100 table-responsive">
        <table class="table table-condensed table-hover" id="TableOfRentalItems">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Price For Renting</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in compra.CompraItems)
                {
                    <tr id="MovieData_@item.Title">
                        <td>@item.Title</td>
                        <td>@item.Genre</td>
                        <td>@item.PriceForRenting</td>
                        <td><InputText @bind-Value="item.Description" class="form-control" id="@($"description_{item.MovieID}")" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</EditForm>

@*a modal popup dialog for checking if user wants to proceed to purchase*@
@if (DialogIsOpen)
{
    <Dialog Caption="Compra herramientas"
    Message="¿Quieres seguir con la compra de herramientas?"
    OnClose="@OnDialogClose"
    Type=Dialog.Category.SaveNot>
    </Dialog>
}   

@code {

    private bool DialogIsOpen;
    private object? errors;
    private CreateCompra compra => compraState.compra;
    private string messageError = "";
    private bool hideErrors { get { return messageError.Length == 0; } }

    private decimal TotalCost { 
        get {
            int days = (compra.RentalDateTo.DateTime - compra.RentalDateFrom.DateTime).Days;
            double price = compra.RentalItems.Sum(ri => ri.PriceForRenting * days);
                return Convert.ToDecimal(price);
            }
    }
    private void ModifyCompraItems() {
        navigation.NavigateTo("/rental/selectmoviesforrental");
    }

    private void OpenDialog()
    {
        DialogIsOpen = true;
    }

    private async Task OnDialogClose(bool isOk) {

        DialogIsOpen = false;
        if (isOk) {
            // Process the data introduced by the user if they are valid
            if (compra.CompraItems.Count > 0)
            {
                try
                {
                    var rented = await apiclient.CreateCompraAsync(compra);
                    compraState.CompraProcessed();
                    navigation.NavigateTo($"/rental/detailrental/?RentalID={rented.Id}");
                }
                catch (ApiException<ValidationProblemDetails> apiexceptionvalidation)
                {

                    if (apiexceptionvalidation.Result.Errors.Values != null)
                    {
                        messageError = "";
                        foreach (var errors in apiexceptionvalidation.Result.Errors.Values)
                            //https://learn.microsoft.com/en-us/dotnet/api/system.string.join?view=net-7.0
                            messageError = string.Join("(*) ", messageError, string.Join(" (*) ", errors));
                    }
                }
                catch (ApiException apiexception)
                {
                    //we need to inform user that there was some other error while processing the request
                    messageError = "Error while processing your request, please try again later!";

                }
            }
        }
    }




}